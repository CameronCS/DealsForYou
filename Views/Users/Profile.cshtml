@model User

@{
    ViewData["Title"] = "Profile";
}

<div class="profile-container">
    <h1 class="profile-title">User Profile</h1>

    <div class="profile-info">
        <p class="profile-detail"><strong>Username:</strong> @Model.Username</p>
        <p class="profile-detail"><strong>First Name:</strong> @Model.FirstName</p>
        <p class="profile-detail"><strong>Last Name:</strong> @Model.LastName</p>
        <p class="profile-detail"><strong>Email:</strong> @Model.Email</p>
        <p class="profile-detail"><strong>Cell:</strong> @Model.Cell</p>
    </div>

    <div class="profile-action">
        <a asp-action="EditProfile" class="edit-button">Edit Profile</a>
    </div>
</div>
