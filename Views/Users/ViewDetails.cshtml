@model CurrentStock
@{
    ViewData["Title"] = $"{Model.Year} {Model.Make} {Model.Make}";
}

<div>
    <h1>Car Details</h1>
    <div>
        <h2>@Model.Year @Model.Make @Model.Model</h2>
        <div>
            <img src="data:@Model.Image.FileName;Base64,@Convert.ToBase64String(Model.Image.image_data)" style="width:200px;height:auto" />
        </div>
        <div>
            <ul>
                <li>Vin Number: @Model.Vin</li>
                <li>License: @Model.License</li>
            </ul>

            <h3>Price: @Model.FPrice</h3>

            <form asp-action="Payment" asp-controller="Users" method="post">
                <input for="id" name="id" value="@Model.ID" hidden/>
                <button type="submit">Continue To Payment</button>
            </form>

            <form asp-action="Index" asp-controller="Users" method="get">
                <button type="submit">Go Back</button>
            </form>
        </div>
    </div>
</div>
