@{
    ViewData["Title"] = "View All Invoices";
}

@model List<AddedInvoices>

<div class="invoices-container">
    <h1 class="invoices-title">View All Invoices</h1>

    @if (Model.Count == 0) {
        <p class="no-invoices-message">No invoices available.</p>
    } else {
        <div class="invoice-grid">
            @foreach (AddedInvoices item in Model) {
                <div class="invoice-card">
                    <h2 class="invoice-card-title">Invoice for: @item.Year @item.Make @item.Model</h2>
                    <div class="invoice-actions">
                        <form asp-action="ViewSpecific" asp-controller="Admin" method="get" class="invoice-action-form">
                            <input name="id" value="@item.ID" type="hidden" />
                            <button type="submit" class="btn view-invoice-button">View Invoice</button>
                        </form>
                        <form asp-action="DownloadInvoice" asp-controller="Admin" method="get" class="invoice-action-form">
                            <input name="id" value="@item.ID" type="hidden" />
                            <button type="submit" class="btn download-invoice-button">Download Invoice</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }

    <div class="home-button">
        <form asp-action="Index" asp-controller="Admin">
            <button type="submit" class="btn home-button">Go Home</button>
        </form>
    </div>
</div>
